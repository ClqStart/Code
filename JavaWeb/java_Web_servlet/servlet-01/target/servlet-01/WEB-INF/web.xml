<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                           http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

  <context-param>
    <param-name>url</param-name>
    <param-value>jdbc:mysql://localhost:3306/mybatis</param-value>
  </context-param>

  <servlet>
    <servlet-name>hello</servlet-name>
    <servlet-class>com.kuang.servlet.HelloServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>hello</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>hello1</servlet-name>
    <servlet-class>com.kuang.servlet.HelloServlet1</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>hello1</servlet-name>
    <url-pattern>/hello1</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>getContent</servlet-name>
    <servlet-class>com.kuang.servlet.getServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getContent</servlet-name>
    <url-pattern>/get</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>geturl</servlet-name>
    <servlet-class>com.kuang.servlet.demo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>geturl</servlet-name>
    <url-pattern>/de</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>conf</servlet-name>
    <servlet-class>com.kuang.servlet.propertiesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>conf</servlet-name>
    <url-pattern>/conf</url-pattern>
  </servlet-mapping>


</web-app>
